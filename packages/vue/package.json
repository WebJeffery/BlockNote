{
  "name": "blocknote-editor-vue",
  "homepage": "https://github.com/WebJeffery/BlockNote",
  "private": false,
  "license": "MPL-2.0",
  "version": "0.0.1",
  "files": [
    "dist",
    "types",
    "src"
  ],
  "keywords": [
    "react",
    "javascript",
    "editor",
    "typescript",
    "prosemirror",
    "wysiwyg",
    "rich-text-editor",
    "notion",
    "yjs",
    "block-based",
    "tiptap"
  ],
  "description": "A \"Notion-style\" block-based extensible text editor built on top of Prosemirror and Tiptap.",
  "type": "module",
  "source": "src/index.ts",
  "types": "./types/src/index.d.ts",
  "main": "./dist/blocknote-react.umd.cjs",
  "module": "./dist/blocknote-react.js",
  "exports": {
    ".": {
      "types": "./types/src/index.d.ts",
      "import": "./dist/blocknote-react.js",
      "require": "./dist/blocknote-react.umd.cjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build-bundled": "tsc && vite build --config vite.config.bundled.ts && git checkout tmp-releases && rm -rf ../../release && mv ../../release-tmp ../../release",
    "preview": "vite preview",
    "lint": "eslint src --max-warnings 0",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "clean": "rimraf dist && rimraf types"
  },
  "dependencies": {
    "@blocknote/core": "^0.11.1",
    "@tiptap/core": "^2.0.3",
    "@tiptap/starter-kit": "^2.2.2",
    "@tiptap/vue-3": "^2.2.1",
    "lodash.foreach": "^4.5.0",
    "lodash.groupby": "^4.6.0",
    "lodash.merge": "^4.6.2",
    "use-prefers-color-scheme": "^1.1.3",
    "vue": "^3"
  },
  "devDependencies": {
    "@types/lodash.foreach": "^4.5.9",
    "@types/lodash.groupby": "^4.6.9",
    "@types/lodash.merge": "^4.6.9",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "eslint": "^8.10.0",
    "prettier": "^2.7.1",
    "rimraf": "^5.0.5",
    "rollup-plugin-webpack-stats": "^0.2.2",
    "typescript": "^5.0.4",
    "vite": "^4.5.2",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-externalize-deps": "^0.7.0",
    "vitest": "^0.34.1"
  },
  "peerDependencies": {
    "vue": "^3"
  },
  "eslintConfig": {
    "extends": [
      "../../.eslintrc.js"
    ]
  }
}
